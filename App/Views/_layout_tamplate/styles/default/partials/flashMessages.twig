{% if flash.getMessage('info') %}
	<div class="alert alert-info text-center" role="alert">{{ flash.getMessage('info') | first }}</div>
{% endif %}

{% if flash.getMessage('success') %}
	<div class="alert alert-success text-center" role="alert">{{ flash.getMessage('success') | first }}</div>
{% endif %}

{% if flash.getMessage('error') %}
	<div class="alert alert-danger text-center" role="alert">{{ flash.getMessage('error') | first }}</div>
{% endif %}

{% if flash.getMessage('warning') %}
	<div class="alert alert-warning text-center" role="alert">{{ flash.getMessage('warning') | first }}</div>
{% endif %}